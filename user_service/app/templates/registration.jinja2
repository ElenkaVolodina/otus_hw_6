<!doctype html>
<html lang="ru">

<body>
<form action="" method="POST" enctype="application/x-www-form-urlencoded">
    <div class="box">
        <div class="row">
            <div class="column"><label for="username">Логин</label></div>
            <div class="column"><input id="username" name="username" type="text"/></div>
        </div>
        <div class="row">
            <div class="column"><label for="first_name">Имя пользователя</label></div>
            <div class="column"><input id="first_name" name="first_name" type="text"/></div>
        </div>
        <div class="row">
            <div class="column"><label for="last_name">Фамилия пользователя</label></div>
            <div class="column"><input id="last_name" name="last_name" type="text"/></div>
        </div>
        <div class="row">
            <div class="column"><label for="email">Email пользователя</label></div>
            <div class="column"><input id="email" name="email" type="email"/></div>
        </div>
        <div class="row">
            <div class="column"><label for="phone">Телефон пользователя</label></div>
            <div class="column"><input id="phone" name="phone" type="tel"/></div>
        </div>
        <div class="row">
            <div class="column"><label for="password">Пароль</label></div>
            <div class="column"><input id="password" name="password" type="password"/></div>
        </div>
        <div class="row">
            <div class="column"><label for="password1">Повторите пароль</label></div>
            <div class="column"><input id="password1" name="password1" type="password"/></div>
        </div>
        <div class="row">
            <div class="column"><button type="submit">Регистрация</button></div>
        </div>
    </div>
</form>
</body>
</html>
